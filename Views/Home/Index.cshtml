@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Biglietteria</h1>
</div>
<form asp-action="VendiBiglietto" method="post">
    <div>
        <label>Nome: </label>
        <input type="text" name="FirstName" required />
    </div>

    <div>
        <label>Cognome: </label>
        <input type="text" name="LastName" required />
    </div>

    <div>
        <label>Sala: </label>
        <select name="Sala" required>
            <option value="SALA NORD">Nord</option>
            <option value="SALA EST">Est</option>
            <option value="SALA SUD">Sud</option>
        </select>
    </div>

    <div>
        <label>Tipo Biglietto: </label>
        <select name="TipoBiglietto" required>
            <option value="Intero">Intero</option>
            <option value="Ridotto">Ridotto</option>
        </select>
    </div>
    <button type="submit">Vendi Biglietto</button>
</form>

<div>
    <h3>Biglietti Venduti</h3>
    @foreach (var sala in new[] { new { Name = "SALA NORD", Tickets = ViewBag.TicketsNord, Ridotti = ViewBag.RidottiNord }, new { Name = "SALA EST", Tickets = ViewBag.TicketsEst, Ridotti = ViewBag.RidottiEst }, new { Name = "SALA SUD", Tickets = ViewBag.TicketsSud, Ridotti = ViewBag.RidottiSud } })
    {
    <div>
        <h4>@sala.Name</h4>
        <p>Biglietti Totali: @sala.Tickets</p>
        <p>Biglietti Ridotti: @sala.Ridotti</p>
    </div>
    }
</div>